// Autor(a)    : Nome do(a) aluno(a)
// Data atual  : 09/05/2023
Var
   // Seção de Declarações das variáveis
   idade: vetor [1..2] de caractere
   nome: vetor [1..2] de caractere
   altura : vetor [1..2] de inteiro
   peso: vetor [1..2] de inteiro
   i, j: inteiro

Inicio
   // Seção de Comandos, procedimento, funções, operadores, etc...
   para  i de 1 ate 2 faca
      escreval("digite seu nome:")
      leia(nome[i])
      escreval("qual sua idade:", nome[i])
      leia(idade[i])
      escreval ("qual sua altura:",nome[i])
      leia(altura[i])
      escreval("qual seu peso:", nome[i])
      leia(peso[i])
   fimpara
   limpatela

   para i de 1 ate 2 faca
      escreval ("NOME:", nome[i])
      escreval("IDADE:", idade[i])
      escreval ("ALTURA:",altura[i])
      escreval("PESO:", peso[i])
   fimpara



